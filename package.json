{
  "scripts": {
    "dev": "concurrently npm:dev:client npm:dev:server",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "prepare": "husky",
    "test": "tsc --noEmit && npm run test:shared && npm run test:client && npm run test:server && prettier --check",
    "test:shared": "vitest --watch=false",
    "test:client": "cd client && npm test",
    "test:server": "cd server && npm test",
    "postinstall": "cd client && npm install --include=dev && cd ../server && npm install"
  },
  "devDependencies": {
    "@types/supertest": "^6.0.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.0.1",
    "cross-env": "^7.0.3",
    "concurrently": "^9.0.1",
    "husky": "^9.1.6",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2",
    "vite": "^5.4.7",
    "vitest": "^2.1.2"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "supertest": "^7.0.0"
  }
}
